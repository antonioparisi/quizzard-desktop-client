<div class='dashboard'>
  <div class='row'>
    <div class='col-lg-12 content'>
      <div class='col-lg-3 col-md-3 sidebar'>
        {{outlet 'status'}}

        <div {{bind-attr class=':management room.classCheckOnlinePlayers:false:disabled'}}>
          <table class='table'>
            <thead>
              <tr>
                <th>Players</th>
                <th>Score</th>
              </tr>
            </thead>
            <tbody>
              {{#each user in room.waitingRoom}}
                {{render 'users/table_row' user}}
              {{/each}}
            </tbody>
          </table>
        </div>

        <div class='actions'>
          {{outlet 'actions'}}
        </div>
      </div>

      <div class='col-lg-9 col-md-9 wrapper'>
        {{outlet 'wrapper'}}
      </div>
    </div>
  </div>
</div>
